<!-- facebook ogp --><% if (sns.facebook.app_id) { %>
<meta property="fb:app_id" content="<%= sns.facebook.app_id %>"><% } %>
<meta property="og:url" content="<%= ogp.url || url %>">
<meta property="og:image" content="<%= ogp.image.url %>"><% if (ogp.image.width) { %>
<meta property="og:image:width" content="<%= ogp.image.width %>"><% } %><% if (ogp.image.height) { %>
<meta property="og:image:height" content="<%= ogp.image.height %>"><% } %>
<meta property="og:type" content="<%= ogp.type || 'website' %>">
<meta property="og:title" content="<%= ogp.title || meta.title %>">
<meta property="og:site_name" content="<%= ogp.site_name || ogp.site_name || meta.title %>" />
<meta property="og:description" content="<%= ogp.description || meta.description %>">
<meta property="og:locale" content="ja_JP">
